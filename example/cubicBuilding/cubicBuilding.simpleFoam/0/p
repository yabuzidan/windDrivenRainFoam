FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    top
    {
        type            slip;
    }
    inlet
    {
		type			zeroGradient;
    }
    outlet
    {
        type            fixedValue;
        value      		$internalField;
    }

    ground      
    {
        type            zeroGradient;
    }
    cube      
    {
        type            zeroGradient;
    }
    sides
    {
		type			slip;
    }
}

